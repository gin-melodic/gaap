# ==================== SHARED ENVIRONMENT ====================
# This file is shared across frontend and backend via docker-compose

# Development Domain (add to /etc/hosts)
DEV_DOMAIN=gaap.local

# Service Ports
API_PORT=9100
WEB_PORT=3100
POSTGRES_PORT=5532
REDIS_PORT=6479
RABBITMQ_PORT=5772
RABBITMQ_MANAGEMENT_PORT=15772

# Caddy Reverse Proxy (External Access)
CADDY_HTTP_PORT=80
CADDY_HTTPS_PORT=443

# API URLs (via Caddy reverse proxy)
API_BASE_URL=https://${DEV_DOMAIN}
NEXT_PUBLIC_API_URL=https://${DEV_DOMAIN}/api/v1

# PostgreSQL Database
POSTGRES_HOST=postgres
POSTGRES_DB=gaap
POSTGRES_USER=gaap_user
POSTGRES_PASSWORD=gaap_dev_password_2024

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=redis_dev_password

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_USER=gaap_mq
RABBITMQ_PASSWORD=mq_dev_password

# Backend (GoFrame)
GF_ENV=develop
GF_DEBUG=true
GF_LOG_LEVEL=all
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h # 7 days
ALE_BOOTSTRAP_KEY=your-64-character-hex-key-here # You can generate a random key using `openssl rand -hex 32`
TURNSTILE_SECRET=your-turnstile-secret-key-here

# Frontend (Next.js)
NODE_ENV=development

# Debugging (Delve for Go)
ENABLE_DELVE=true
DELVE_PORT=40000
